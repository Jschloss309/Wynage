<div class="list-group">
    <h1 class="list-group-item active formatting">Posts</h1>

  <% @posts.each do |post| %>
    <%= link_to post.title, post, class: "list-group-item" %>
  <% end %>
  <% if current_user %>
  <%= link_to 'New Post', new_post_path, class: "list-group-item active coloring" %>
  <% end %>
</div>
